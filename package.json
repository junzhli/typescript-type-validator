{
  "name": "typescript-type-validator",
  "version": "1.0.1",
  "description": "Typescript-first type validator",
  "author": {
    "name": "Jeremy Li"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/junzhli/typescript-type-validator.git"
  },
  "type": "module",
  "dependencies": {
    "tslint": "^6.1.3",
    "typescript": "^5.8.3"
  },
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/cjs/index.js",
      "import": "./dist/esm/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "build": "yarn clean && yarn build:cjs && yarn run build:esm && yarn fixup",
    "build:cjs": "tsc --project tsconfig.cjs.json",
    "build:esm": "tsc --project tsconfig.esm.json",
    "fixup": "./build-scripts/fix-dist.sh",
    "lint": "npx eslint src/**",
    "prepublish": "yarn build",
    "test": "vitest run",
    "test-coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@vitest/coverage-v8": "3.2.3",
    "eslint": "^9.29.0",
    "globals": "^16.2.0",
    "typescript-eslint": "^8.34.0",
    "vitest": "^3.2.3"
  }
}
